<% @recipies.each do |recipe| %>
  <% recipe = JSON.parse(File.read(recipe)) %>
  <div>
    <i><%= recipe['public_slug'] %></i>
    -
    <%= recipe['name'] %>
    <br>
    <% if false %>
      <% image = recipe['images'].find { |i| i['image']['size'] == 'small-square' } %>
      <%= image_tag(image['image']['url']) %>
    <% end %>
  </div>
<% end %>

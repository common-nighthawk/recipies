<hr>

<%= @list.name %>

<ul>
  <% @list.items.sort_by { |i| [i.name, i.id] }.each do |item| %>
    <% if !item.purchased? %>
      <li>
        <span style="font-size:3em">
          <%= link_to("ðŸ›’", item_path(item, purchased_at: Time.now), :method => "put") %>
        </span>
        <%= item.name %>
        -
        <%= item.quantity %>
        <%= item.measurement_unit %>
      </li>
    <% else %>
        <li>
          <span style="font-size:3em">
            <%= link_to("ðŸ›’", item_path(item, purchased_at: nil), :method => "put") %>
          </span>
          <strike>
            <%= item.name %>
            -
            <%= item.quantity %>
            <%= item.measurement_unit %>
        </strike>
      </li>
    <% end %>
  <% end %>
</ul>
